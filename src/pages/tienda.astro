---
import MotoCard from "../components/MotoCard.astro";
import MainLayout from "../layouts/MainLayout.astro";

const motos = [
  { marca: "Yamaha", nombre: "MT-07", precio: 7499, imagen: "/images/mt07.jpg" },
  { marca: "Kawasaki", nombre: "Z900", precio: 9299, imagen: "/images/z900.jpg" },
  { marca: "Honda", nombre: "CB500X", precio: 6899, imagen: "/images/cb500x.jpg" },
  { marca: "Yamaha", nombre: "R1", precio: 18999, imagen: "/images/r1.jpg" },
];
---
<MainLayout title="MOTOKASS - Tienda y Taller de Motos"
  description="MOTOKASS es tu tienda y taller mecánico de motos. Venta, mantenimiento y reparación.">
  <section class="section">
    <div class="container">
      <h1>Tienda de Motos</h1>
      <p class="section-subtitle">Motos nuevas y de ocasión seleccionadas para ti.</p>
      
      <div class="motos-grid">
        {motos.map(moto => <MotoCard {...moto} />)}
      </div>
    </div>
  </section>
</MainLayout>

<style>
.motos-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 2rem;
}
</style>
