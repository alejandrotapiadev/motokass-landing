---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<MainLayout
  title="Tienda de Motos - MOTOKASS"
  description="Descubre nuestras motos nuevas y de ocasión en MOTOKASS."
>
  <Header />

<section class="section">
  <div class="container">
    <h1>Tienda de Motos</h1>
    <p class="section-subtitle">
      Motos nuevas y de ocasión seleccionadas para ti.
    </p>

    <div class="grid">
      <div class="card moto-card">
        <h3>Yamaha MT-07</h3>
        <p>Potente, ligera y versátil.</p>
        <span class="price">7.499 €</span>
      </div>

      <div class="card moto-card">
        <h3>Kawasaki Z900</h3>
        <p>Deportiva urbana con carácter.</p>
        <span class="price">9.299 €</span>
      </div>

      <div class="card moto-card">
        <h3>Honda CB500X</h3>
        <p>Perfecta para viajes largos.</p>
        <span class="price">6.899 €</span>
      </div>
    </div>
  </div>
</section>

<style>
.moto-card {
  position: relative;
}

.moto-card .price {
  position: absolute;
  bottom: 1.25rem;
  right: 1.25rem;
  font-weight: 800;
  color: var(--color-secondary);
}
</style>

  <Footer />
</MainLayout>
