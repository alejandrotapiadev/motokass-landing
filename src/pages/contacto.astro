---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <section class="contacto-section">
    <div class="container">
      <h1>Contacto</h1>
      <p class="section-subtitle">Elige cómo quieres ponerte en contacto con nosotros</p>

      <div class="contact-buttons">
        <a href="mailto:motokass@gmail.com" class="btn-primary">Enviar correo</a>
        <a href="tel:+34123456789" class="btn-secondary">Llamar por teléfono</a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
.contacto-section {
  padding: 4rem 1rem;
  text-align: center;
}

.contacto-section h1 {
  font-size: 2rem;
  margin-bottom: 1rem;
}

.contacto-section .section-subtitle {
  font-size: 1rem;
  color: var(--color-muted);
  margin-bottom: 2rem;
}

.contact-buttons {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  justify-content: center;
  align-items: center;
  margin-top: 2rem;
}

.contact-buttons a {
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 700;
  text-decoration: none;
  min-width: 220px;
  text-align: center;
  transition: transform 0.2s ease, background 0.3s ease;
}

.btn-primary {
  background: var(--color-secondary);
  color: white;
}

.btn-primary:hover {
  background: #00474f; /* tono más oscuro de tu color secundario */
  transform: translateY(-2px);
}

.btn-secondary {
  background: white;
  color: var(--color-secondary);
  border: 2px solid var(--color-secondary);
}

.btn-secondary:hover {
  background: var(--color-secondary);
  color: white;
  transform: translateY(-2px);
}

/* En escritorio, botones horizontal */
@media(min-width: 640px) {
  .contact-buttons {
    flex-direction: row;
  }
}
</style>
